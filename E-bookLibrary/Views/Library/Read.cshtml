@model ReadBook
@{
    ViewData["Title"] = "Read";
}
@{
    var ebook = ViewData.Model;
}

<h1>Read</h1>


<div class="col-md-6 mx-auto">
    <img class="img-fluid" src="@ebook.imgcover" alt="book-cover"/>
    
</div>

<div>
    @foreach (var textContentFile in @ebook.Content)
    {
        @Html.Raw(textContentFile.Content)
    }
    
</div>
