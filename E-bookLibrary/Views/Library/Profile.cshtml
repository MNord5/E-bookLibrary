@model EbookUpload
@{
    ViewData["Title"] = "Profile";
}

<h1>Profile</h1>
<h3>@User.Identity.Name</h3>
<h3>@User.Claims.FirstOrDefault(x => x.Type == System.Security.Claims.ClaimTypes.NameIdentifier)?.Value </h3>

<div class="container-fluid">
    <div class="row">
        <div class="col d-flex justify-content-center">
            <div class="card p-3 d-grid col-6 mx-auto">
                <div class="card-header">
                    <h2 class="text-center">Add book</h2>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div>
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" type="text" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="Author" class="form-label">Author</label>
                            <input asp-for="Author" type="text" class="form-control" />
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="FormFile" class="form-label">Upload File</label>
                            <input asp-for="FormFile" type="file" accept=".epub" class="form-control" />
                            <span asp-validation-for="FormFile" class="text-danger"></span>
                        </div>
                        <div class="p-3 d-grid col-6 mx-auto">
                            <button type="submit" class="btn btn-dark">Upload</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}