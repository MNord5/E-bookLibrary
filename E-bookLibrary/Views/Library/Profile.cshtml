@model EbookUpload
@{
    ViewData["Title"] = "Profile";
}



<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card mt-5">
                <div class="card-header">
                    <h2 class="text-center">Add book</h2>
                </div>
                <div class="card-body p-3">
                    <form method="post" enctype="multipart/form-data">
                        <div>
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" type="text" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="Author" class="form-label">Author</label>
                            <input asp-for="Author" type="text" class="form-control" />
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="FormFile" class="form-label">Upload File</label>
                            <input asp-for="FormFile" type="file" accept=".epub" class="form-control" />
                            <span asp-validation-for="FormFile" class="text-danger"></span>
                        </div>
                        <div class="pt-3 d-grid col-6 mx-auto">
                            <button type="submit" class="btn btn-dark btn-lg">Upload</button>
                        </div>

                    </form>
                    <div>
                        @if(TempData["success"] != null) {
                            <h3>@TempData["success"]</h3>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}